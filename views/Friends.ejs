   <div class="search-container">
       <input type="text" id="search-input" name="search-input" placeholder= "Enter Username">
       <button id="check-profile">Check Profile</button>
       <div class="popup">
        <span class="popuptext" id="myPopup">User does not exist!</span>
        </div>
       <script>
          const checkProfileButton = document.getElementById("check-profile");
          const searchInput = document.getElementById("search-input");
          const popup = document.createElement("div")
          popup.classList.add("popup");
          popup.classList.add("popup");
          const popupText = document.createElement("span");
          popupText.classList.add("popuptext");
          popupText.id = "myPopup";
          popupText.textContent = "User does not exist!";

          popup.appendChild(popupText);

          document.body.appendChild(popup);
          checkProfileButton.addEventListener("click", async (event) => {
            const url = "../profile/"+searchInput.value;
              let res = await fetch(url);
              if (res.ok) {
                window.location.href = url;
              }
              else {
                
                document.getElementById("myPopup").classList.add("show");
                setTimeout(function() {document.getElementById("myPopup").classList.remove("show");}, 2000);
              }    
            })
       </script>
     </div>


     <h2 style="text-align: left; margin-left: 108px; margin-bottom: 150px; font-size: 30px; font-style: italic; color: orange;">Suggestions</h2>

     <div class="grid-container" id="grid-container">
       <script>
        // get 10 suggested friends
        getSuggested();

        async function getSuggested() {
        try {
        const res = await fetch("/api/friendships/suggest-friends");
        if (res.ok){
          const data = await res.json();
          const suggestedProfiles = data.suggestedProfiles;
          
          console.log("inside" + suggestedProfiles);
          const gridContainer = document.getElementById("grid-container")
          suggestedProfiles.forEach((suggestedProfile, index) => {
          const grid = `<div class="grid-item">
              <img src="${suggestedProfile.profilePicture}" alt="profile picture" class="profile-picture">
              <a href="/profile/${suggestedProfile.user.username}">
              <p class="user-name">${suggestedProfile.user.username}</p>
              </a>
            </div>`;
            gridContainer.innerHTML += grid;
        });
        }
      } 
        catch (err) {
          console.error(err);
          return;
        }
        }
       </script>
       
